{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "Root/*": ["./src/*"],
      "Models/*": ["./src/models/*"],
      "Features/*": ["./src/features/*"],
      "Utils/*": ["./src/utils/*"],
      "Types/*": ["./src/types/*"],
      "Config/*": ["./src/config/*"],
      "Style/*": ["./src/style/*"],
      "Screen/*": ["./src/screen/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
